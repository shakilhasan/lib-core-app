  "bugs": {
    "url": "https://github.com/shakilhasan/lib-core-app/issues"
  },
  "homepage": "https://github.com/shakilhasan/lib-core-app#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  }
}
