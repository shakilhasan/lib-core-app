{
  "author": "Md. Shakil Hasan Bin Younus",
  "name": "lib-core-app",
  "version": "1.0.0",
  "description": "Node-App Core Module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npm run build",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch '**/*.ts' --exec 'ts-node' dist/index.js",
    "watch": "nodemon --watch '**/*.ts' --exec 'ts-node' index.ts",
    "format": "prettier --write \"./index.ts\" \"./src/**/*.{ts,js,json}\"",
    "lint": "eslint \"./index.ts\" \"./src/**/*.{js,ts}\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakilhasan/lib-core-app.git"
  },
